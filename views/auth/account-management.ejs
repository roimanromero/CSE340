<%- include('../partials/header') %>
<%- include('../partials/nav') %>

<main>
  <h1>Account Management</h1>

  <!-- Flash Messages -->
  <% if (messages && messages.length) { %>
    <div class="flash-messages">
      <% messages.forEach(function(message) { %>
        <p><%= message %></p>
      <% }); %>
    </div>
  <% } %>

  <!-- Error Messages -->
  <% if (errors && errors.length) { %>
    <div class="error-messages">
      <% errors.forEach(function(error) { %>
        <p><%= error %></p>
      <% }); %>
    </div>
  <% } %>

  <!-- Conditional greeting and links based on account type -->
  <% if (accountType === 'Client') { %>
    <h2>Welcome <%= accountFirstname %></h2>
    <!-- Allow Client to update account information -->
    <a href="/account/update/<%= accountId %>">Update Account Information</a>
  <% } else { %>
    <h2>Welcome <%= accountFirstname %></h2>
    <h3>Inventory Management</h3>
    <p><a href="/inventory">Access Inventory Management</a></p>
  <% } %>
</main>

<%- include('../partials/footer') %>
